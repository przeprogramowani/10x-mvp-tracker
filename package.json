{
  "name": "@przeprogramowani/10x-mvp-tracker",
  "version": "1.0.0",
  "description": "MCP tool for tracking MVP project completion status. Analyzes Astro projects against 10 criteria and generates progress reports.",
  "directories": {
    "doc": "docs"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "10x-mvp-tracker": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "npx fastmcp dev src/index.ts",
    "inspect": "npx fastmcp inspect src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format:check"
  },
  "keywords": [
    "mcp",
    "astro",
    "mvp",
    "tracker",
    "fastmcp"
  ],
  "author": "Przeprogramowani",
  "license": "MIT",
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "github:przeprogramowani/10x-mvp-tracker",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "fastmcp": "3.13.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "24.1.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
